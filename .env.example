# ==========================================
# CONFIGURAÇÕES GERAIS DO BOT
# ==========================================
# Nome do ecossistema ou identificador do bot (usado em logs, etc.)
ECOSYTEM_NAME=catDeveloper

# Prefixo global para os comandos do bot (ex: !, /, .)
BOT_GLOBAL_PREFIX=/

# ==========================================
# CHAVES DE API EXTERNAS
# ==========================================
# Chave da API do Google Gemini para funcionalidades de IA. Substitua pela sua chave real.
GEMINI_APIKEY=sua_chave_api_aqui_123xyz

# ==========================================
# CONFIGURAÇÕES DE CONEXÃO COM O WHATSAPP (BAILEYS)
# ==========================================
# Ativa/desativa logs detalhados da biblioteca Baileys para depuração. (true/false)
DEBUG_BAILEYS=false
# Sincroniza o histórico completo de mensagens ao conectar. Pode consumir muitos recursos. (true/false)
SYNC_FULL_HISTORY=false

# --- Configurações da Lógica de Reconexão Automática (valores em milissegundos, exceto o expoente) ---
# Atraso inicial (ms) para a primeira tentativa de reconexão após uma desconexão.
DEFAULT_INITIAL_RECONNECT_DELAY=1000
# Atraso (ms) se a conexão inicial com o WhatsApp falhar ao iniciar o bot.
INITIAL_CONNECT_FAIL_DELAY=1500
# Atraso máximo (ms) entre tentativas de reconexão (limite superior do backoff exponencial).
DEFAULT_MAX_RECONNECT_DELAY=60000
# Expoente máximo para o cálculo do backoff exponencial (controla o quão rápido o atraso aumenta).
DEFAULT_RECONNECT_MAX_EXPONENT=10

# ==========================================
# CONFIGURAÇÕES DO BANCO DE DADOS MYSQL
# ==========================================
# Host do banco (pode ser IP ou domínio)
MYSQL_HOST=db.exemplo.com
# Usuário do MySQL
MYSQL_LOGIN_USER=admin_user
# Senha do usuário (use uma senha forte)
MYSQL_LOGIN_PASSWORD="Ks8#mP9$vL2@nQ5"
# Nome do banco de dados
MYSQL_DATABASE=projeto_dev
# Limite máximo de conexões simultâneas
MYSQL_CONNECTION_LIMIT=100
# Verifica a validade do pool de conexões na inicialização do bot. (true/false)
VERIFY_POOL_ON_INIT=true
# Tempo limite (ms) para estabelecer uma conexão com o banco de dados.
MYSQL_CONNECT_TIMEOUT=15000

# ==========================================
# CONFIGURAÇÕES DE FUNCIONALIDADES ESPECÍFICAS
# ==========================================
# Ativa/desativa o envio de mensagens de boas-vindas para novos membros em grupos. (true/false)
SEND_WELCOME_MESSAGES=false
