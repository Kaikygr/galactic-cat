{
    "printWidth": 1000,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "auto",
    "bracketSameLine": false,
    "proseWrap": "always",
    "htmlWhitespaceSensitivity": "css",
    "quoteProps": "as-needed",
    "embeddedLanguageFormatting": "auto",
    "overrides": [
        {
            "files": "*.json",
            "options": {
                "parser": "json"
            }
        },
        {
            "files": [
                "*.js",
                "*.jsx"
            ],
            "options": {
                "parser": "babel"
            }
        }
    ]
}